<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Name -->
    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMakeModelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:baselineAligned="false"/>

        <TextView
            android:id="@+id/textMakeModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>

    <!-- Year -->
    <LinearLayout
        android:id="@+id/yearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/nameLayout"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textYearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:baselineAligned="false"/>

        <TextView
            android:id="@+id/textYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>

    <!-- Price -->
    <LinearLayout
        android:id="@+id/priceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/yearLayout"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textSize="20dp"
            android:textStyle="bold"
            android:baselineAligned="false"/>

        <TextView
            android:id="@+id/textPricePerDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
    </LinearLayout>

    <!-- Edit Button -->
    <Button
        android:id="@+id/buttonEditCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceLayout"
        android:text="Edit"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/buttonDeleteCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceLayout"
        android:text="Delete"
        android:layout_toStartOf="@id/buttonEditCar"/>

    <!-- Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/buttonEditCar"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
